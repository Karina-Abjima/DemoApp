<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MVVMApp.ViewModels;assembly=MVVMApp"
             x:Class="MVVMApp.Views.MainPage">
    <StackLayout>
        <Label Text="{Binding Message}" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
        <Button Text="Update Message" Command="{Binding UpdateCommand}" HorizontalOptions="CenterAndExpand" />
    </StackLayout>
 </ContentPage>

