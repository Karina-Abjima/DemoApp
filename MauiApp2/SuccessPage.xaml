<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.SuccessPage">

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="User data successfully saved!" FontSize="20" HorizontalOptions="Center" Margin="0,0,0,20" />
            <Button Text="OK" Clicked="OnOKClicked" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>



